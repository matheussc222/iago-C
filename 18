#include <stdio.h>

int main() {
    int n;

    printf("Digite um numero: ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("%d nao eh potencia de 2.\n", n);
        return 0;
    }

    while (n % 2 == 0) {
        n /= 2;
    }

    if (n == 1) {
        printf("Eh potencia de 2.\n");
    } else {
        printf("Nao eh potencia de 2.\n");
    }

    return 0;
}
