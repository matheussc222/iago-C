#include <stdio.h>

int main() {
    float numeros[4];
    float soma = 0;
    int i;
    

    for (i = 0; i < 4; i++) {
        printf("Digite o %dº número: ", i + 1);
        scanf("%f", &numeros[i]);
    }
    
    for (i = 0; i < 4; i++) {
        soma += numeros[i];
    }
    
    printf("\nA soma dos números é: %.2f\n", soma);
    
    return 0;
}
