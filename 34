#include <stdio.h>
#include <string.h>

int main(void) {
    char nome[50];
    char endereco[100]; 
    char telefone[20];
    int idade;
    
printf("Escreva seu nome: ");
fgets(nome, sizeof(nome), stdin);
nome[strcspn(nome, "\n")] = '\0';

printf("Escreva seu endereço: ");
fgets(endereco, sizeof(endereco), stdin);
endereco[strcspn(endereco, "\n")] = '\0';
    
printf("Escreva seu número de telefone: ");
fgets(telefone, sizeof(telefone), stdin);
telefone[strcspn(telefone, "\n")] = '\0';


printf("Escreva sua idade: ");
scanf("%d", &idade);

printf("\n\nSeu nome é %s. Seu endereço é %s. Seu número de telefone é %s. Sua idade é %d.",nome, endereco, telefone, idade);

    return 0;
}
