#include <stdio.h>

int main() {
    float num1, num2, num3;
    float temp;

    printf("Me diz o primeiro numero: ");
    scanf("%f", &num1);

    printf("Agora o segundo: ");
    scanf("%f", &num2);

    printf("E por ultimo, o terceiro: ");
    scanf("%f", &num3);

    if (num1 > num2) {
        temp = num1;
        num1 = num2;
        num2 = temp;
    }
    if (num1 > num3) {
        temp = num1;
        num1 = num3;
        num3 = temp;
    }
    if (num2 > num3) {
        temp = num2;
        num2 = num3;
        num3 = temp;
    }

    printf("\n--- Resultado ---\n");
    printf("O menor numero é: %.2f\n", num1);
    printf("O numero do meio é: %.2f\n", num2);
    printf("O maior numero é: %.2f\n", num3);

    return 0;
}
