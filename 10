#include <stdio.h>

int main() {
    float a, b, c;

    printf("Digite os tres lados do triangulo: ");
    scanf("%f %f %f", &a, &b, &c);

    // Verifica se é um triângulo válido
    if ((a + b > c) && (a + c > b) && (b + c > a)) {
        if (a == b && b == c) {
            printf("O triangulo eh equilatero.\n");
        } else if (a == b || a == c || b == c) {
            printf("O triangulo eh isosceles.\n");
        } else {
            printf("O triangulo eh escaleno.\n");
        }
    } else {
        printf("As medidas informadas nao formam um triangulo.\n");
    }

    return 0;
}
