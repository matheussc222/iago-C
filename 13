#include <stdio.h>

int main() {
    int n, i;
    float nota, peso, somaNotas = 0, somaPesos = 0, media;

    printf("Quantas notas voce deseja inserir? ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        printf("Digite a nota %d: ", i);
        scanf("%f", &nota);

        printf("Digite o peso da nota %d: ", i);
        scanf("%f", &peso);

        somaNotas += nota * peso;
        somaPesos += peso;
    }

    if (somaPesos != 0) {
        media = somaNotas / somaPesos;
        printf("A media ponderada eh: %.2f\n", media);
    } else {
        printf("Erro: soma dos pesos igual a zero.\n");
    }

    return 0;
}
