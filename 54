#include <stdio.h>

int main()
{
float nota, soma = 0, media;
int contador = 0;

 printf("Digite sua nota\n");


while (1){
    
    printf("Nota %d: ",contador + 1);
    scanf("%f", &nota);
    
    if (nota < 0){
        break;
    }
    
    if (nota <= 10){
        soma += nota;
        contador ++;
    } else {
        printf("Nota inválida\n");
    }
    
}
if (contador > 0){
    media = soma / contador;
    printf("A média das suas notas é %.2f\n", media);
}
if(media >= 7){
    printf("Parabéns, você passou!");
}else{
    printf("Que pena, você não passou.");
}
    return 0;
}
