#include <stdio.h>
#include <string.h>

// Função que retorna o valor decimal de um símbolo romano
int valorRomano(char c) {
    switch(c) {
        case 'I': return 1;
        case 'V': return 5;
        case 'X': return 10;
        case 'L': return 50;
        case 'C': return 100;
        case 'D': return 500;
        case 'M': return 1000;
        default: return 0; // caractere inválido
    }
}

int main() {
    char romano[50];
    int i, n, decimal = 0;

    printf("Digite um numero romano (em MAIUSCULAS): ");
    scanf("%s", romano);

    n = strlen(romano);

    for (i = 0; i < n; i++) {
        int atual = valorRomano(romano[i]);
        int proximo = valorRomano(romano[i+1]);

        if (atual < proximo) {
            // Regra da subtração
            decimal -= atual;
        } else {
            decimal += atual;
        }
    }

    printf("O numero decimal equivalente eh: %d\n", decimal);

    return 0;
}
