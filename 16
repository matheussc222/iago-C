#include <stdio.h>

int main() {
    int n, i, ehPrimo = 1;

    printf("Digite um numero: ");
    scanf("%d", &n);

    if (n <= 1) {
        ehPrimo = 0; // 0 e 1 não são primos
    } else {
        for (i = 2; i * i <= n; i++) { // basta testar até a raiz quadrada de n
            if (n % i == 0) {
                ehPrimo = 0;
                break;
            }
        }
    }

    if (ehPrimo) {
        printf("%d eh primo.\n", n);
    } else {
        printf("%d nao eh primo.\n", n);
    }

    return 0;
}
